<style lang="scss">
  @use "../styles/abstracts" as *;

  .site-header {
    padding: $site-header-padding;

    @include mq(medium) {
      padding: $site-header-padding-tablet;
    }

    @include mq(large) {
      padding: $site-header-padding-desktop;
    }

    &__inner {
      display: flex;
      gap: $size-4;
      justify-content: center;

      & a:focus-visible {
        outline: 2px solid var(--selected-color);
        outline-offset: 6px;
        border-radius: 5px;
      }
    }
  }
</style>
